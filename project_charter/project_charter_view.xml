                                <tree editable="bottom">
                                    <field name="objective" />
                                    <field name="target_value"/>
                                    <field name="indicator"/>
                                    <field name="result_obtained"/>
                                    <field name="justification"/>
                                 </tree>
                                <form>
                                    <group>
                                        <field name="objective" />
                                        <field name="target_value"/>
                                        <field name="indicator"/>
                                        <field name="result_obtained"/>
                                        <field name="justification"/>
                                    </group>
                               </form>
                            </field>
                        </group>
                        </page>
                        <page string="Boundaries">
                        <group string="Boundaries, Assumptions, Constraints">
                            <field name="project_boundaries_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="boundaries"/>
                                    <field name="assumptions"/>
                                    <field name="constraints"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="boundaries"/>
                                        <field name="assumptions"/>
                                        <field name="constraints"/>
                                    </group>
                               </form>
                            </field>
                        </group>
                        </page>
                        
